@model souq6.Models.indexVM




<div class="page-header" style="background: url(assets/img/banner1.jpg);">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="breadcrumb-wrapper">
					<h2 class="product-title">Category</h2>
					<ol class="breadcrumb">
						<li><a href="#">Home /</a></li>
						<li class="current">Category</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</div>


<section class="services section-padding">
	<div class="container">
		<div class="row">

			@foreach (var item in Model.categories)
			{
				<div class="col-md-6 col-lg-4 col-xs-12">
					<div class="services-item wow fadeInRight animated" data-wow-delay="0.2s" style="visibility: visible;-webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
					<div class="icon">
						<i class="lni-book"></i>
					</div>
					<div class="services-content">
							<h3><a href="/Home/GetProductbyGategory/@item.ID"> @item.Name </a>  </h3>
						<p>@item.Description</p>
					</div>
				</div>
			</div>
			}


		</div>
	</div>

</section>




@foreach(var item in Model.Products){

<div class="col-xs-6 col-sm-6 col-md-6 col-lg-4">
	<div class="featured-box">
		<figure>
			<div class="icon">
				<span class="bg-green"><i class="lni-heart"></i></span>
				<span><i class="lni-bookmark"></i></span>
			</div>
			<a href="#"><img class="img-fluid" src="assets/img/featured/img-1.jpg" alt=""></a>
		</figure>
		<div class="feature-content">
			<div class="product">
				
			</div>
			<h4><a href="ads-details.html">@item.Name </a></h4>
			<div class="meta-tag">
				<span>
					<a href="#"><i class="lni-user"></i> John Smith</a>
				</span>
				<span>
					<a href="#"><i class="lni-map-marker"></i> New York, US</a>
				</span>
				<span>
					<a href="#"><i class="lni-tag"></i> Canon</a>
				</span>
			</div>
			<p class="dsc">@item.Description  </p>
			<div class="listing-bottom">
					<h3 class="price float-left">$@item.Price  </h3>
					<a href="/Home/CurrentProduct/@item.ID" class="btn btn-common float-right">View Details</a>
			</div>
		</div>
	</div>
</div>
}