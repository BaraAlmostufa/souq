@model List<Product>



<div class="page-header" style="background: url(assets/img/banner1.jpg);">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="breadcrumb-wrapper">
					<h2 class="product-title">Category</h2>
					<ol class="breadcrumb">
						<li><a href="#">Home /</a></li>
						<li class="current">product by category</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</div>






@foreach (var item in Model)
{

	<div class="col-xs-6 col-sm-6 col-md-6 col-lg-4">
		<div class="featured-box">
			<figure>
				<div class="icon">
					<span class="bg-green"><i class="lni-heart"></i></span>
					<span><i class="lni-bookmark"></i></span>
				</div>
				<a href="#"><img class="img-fluid" src="assets/img/featured/img-1.jpg" alt=""></a>
			</figure>
			<div class="feature-content">
				<div class="product">
				</div>
				<h4><a href="ads-details.html">@item.Name </a></h4>
				<div class="meta-tag">
					<span>
						<a href="#"><i class="lni-user"></i>  @item.category.Name   </a>
					</span>
										
				</div>
				<p class="dsc">@item.Description  </p>
				<div class="listing-bottom">
					<h3 class="price float-left">$@item.Price  </h3>
					<a href="/Home/CurrentProduct/@item.ID" class="btn btn-common float-right">View Details</a>
				</div>
			</div>
		</div>
	</div>
}